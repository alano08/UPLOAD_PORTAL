# frontend/Dockerfile

### STAGE 1: Build ###
FROM node:18-alpine AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

### STAGE 2: Production ###
FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html

# Copy the new Nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]